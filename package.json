{
  "name": "mc-base-npm-package",
  "version": "1.0.0",
  "description": "The base package to be forked when creating a new microservice for the market capture api",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:Market-Capture/mc-base-npm-package.git"
  },
  "author": "Taylor Treece",
  "license": "UNLICENSED",
  "scripts": {
    "watch:dev": "nodemon",
    "build": "npm-run-all clean transpile",
    "transpile": "babel src --out-dir dist",
    "clean": "rimraf dist"
  },
  "nodemonConfig": {
    "exec": "npm run build",
    "watch": [
      "src/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "private": true,
  "bugs": {
    "url": ""
  },
  "homepage": "",
  "dependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "axios": "^1.3.4",
    "babel-jest": "^29.5.0",
    "dotenv": "^16.0.3",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sanitize-html": "^2.10.0",
    "validator": "^13.9.0",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@types/express": "^4.17.13",
    "@types/node": "^16.9.6",
    "babel-loader": "^8.2.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "jest": "^27.5.1"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      [
        "@babel/transform-runtime"
      ]
    ]
  }
}
